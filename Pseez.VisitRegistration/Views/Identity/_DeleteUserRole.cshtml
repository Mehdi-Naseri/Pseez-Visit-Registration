<div class="modal-header alert-danger">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
    <h3 class="modal-title">Delete User from Role</h3>
</div>

@using (Html.BeginForm())
{ 
     @*@Html.AntiForgeryToken()*@
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary()

            <div class="form-group Meh-required">
                @Html.Label("UserName", "User Name", new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBox("userName", (string)ViewBag.UserName1, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group Meh-required">
                @Html.Label("RoleName", "Group Name", new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBox("roleName", (string)ViewBag.RoleName1, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <h3>
                        <span class="label label-danger">
                            Are you sure?
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input class="btn btn-danger" type="submit" value="Yes" />
        <button class="btn btn-primary" data-dismiss="modal">No</button>
    </div>
}
