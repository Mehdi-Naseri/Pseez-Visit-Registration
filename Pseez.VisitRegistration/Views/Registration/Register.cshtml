@model Pseez.VisitRegistration.ViewModels.ViewModels.RegistrationViewModel

@{
    ViewBag.Title = "Register";
}
<br />
<div class="row">
    <div class="col-md-6">
        <a href="http://en.nioc.ir">
            <img src="~/Content/Meh/Icons/NiocLogo.PNG" />
        </a>
    </div>
    <div class="col-md-6" style="float:right">
