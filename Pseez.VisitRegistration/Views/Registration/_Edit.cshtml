                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.CompanyPhone, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.CompanyPhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.CompanyPhone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.CompanyAddress, new { @class = "control-label col-sm-3" })
